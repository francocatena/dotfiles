[user]
  email = francocatena@gmail.com
  name  = Franco Catena
[alias]
  st = status
  ci = commit
  co = checkout
  di = diff
  po = push origin
  aa = add --all
  l  = log --oneline --graph --decorate
[color]
  ui = auto
[core]
  excludesfile = ~/.gitignore_global
[diff]
  tool = vimdiff
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[github]
  user = francocatena
[push]
  default = simple
[commit]
  gpgsign = true
