" Change option key maps
nnoremap con :set relativenumber!<CR>

" Switch background
nnoremap cobl :set background=light<CR>
nnoremap cobd :set background=dark<CR>

" Switch colorscheme
nnoremap coc :colorscheme 

" Invisibles characters setup
nnoremap col :set list!<CR>

" Toggle tmux status bar
nnoremap cot :silent !tmux set status<CR>

" Check spelling
nnoremap cos :set spell!<CR>
